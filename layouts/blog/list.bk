<!DOCTYPE html>
<html>

<head>
	{{ partial "header/meta.html" . }}
</head>

<body>

	{{ partial "header/mainnav.html" .}}

	<div class="lg:mx-auto container md:max-w-full lg:max-w-lg2 xl:max-w-xl2">
		<div class="flex flex-wrap">
			{{ range .Data.Pages.ByPublishDate.Reverse }}
			<div class="relative xs:w-full lg:w-1/3 xl:w-1/4 shadow border-2 border-gray-800 m-8">
				<a href="{{ .Permalink }}" title="{{ .Title }}">
				<img class="w-full" src="{{ .Params.img }}" />
				<div class="absolute left-0 top-0 bg-purple-700 text-center text-white w-1/5 opacity-50">
					<span class="text-2xl opacity-100">15</span>
					<span class="text-lg">Sept</span>
					<span class="text-lg">2016</span>
				</div>

				<p class="relative p-4 text-2xl">{{.Title}}</p>
				</a>
			</div>
			{{end}}
		</div>
	</div>
</body>

</html>